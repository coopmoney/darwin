# Development shells
{ inputs, self, ... }:

{
  perSystem = { pkgs, system, ... }: {
    devShells.default = pkgs.mkShell {
      packages = with pkgs; [
        nixfmt-rfc-style
        nil
        git
        self.packages.${system}.darwin-rebuild-wrapper
      ];

      shellHook = ''
        echo "üçé Darwin configuration dev shell"
        echo "   Run 'darwin-switch' to rebuild"
      '';
    };

    # Formatter
    formatter = pkgs.nixfmt-rfc-style;
  };
}

